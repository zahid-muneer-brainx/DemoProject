<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

  <ImageView
      android:layout_width="117dp"
      android:layout_height="77dp"
      android:layout_marginTop="59dp"
      android:src="@drawable/group_7745"
      >

  </ImageView>
  <TextView
      android:layout_width="343dp"
      android:layout_height="34dp"
      android:layout_marginTop="171dp"
      android:layout_gravity="center_horizontal"
      android:textSize="25sp"
      android:textStyle="bold"
      android:textColor="#29304D"
    android:text="@string/welcome_to_clientdex">

  </TextView>
  <TextView
      android:layout_width="343dp"
      android:layout_height="46dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="211dp"
      android:text="@string/enter_your_email_address_and_password_to_continue"
      android:textSize="16sp"
      android:textColor="#5D687E"
    >

  </TextView>
  <EditText
      android:layout_width="343dp"
      android:layout_height="55dp"
      android:layout_marginTop="295dp"
      android:layout_gravity="center_horizontal"
      android:hint="@string/email"
      android:textColor="#929498"
      android:padding="16dp"
      android:background="@drawable/rounded_corner_edittext"

    >

  </EditText>
  <EditText
      android:layout_width="343dp"
      android:layout_height="55dp"
      android:layout_marginTop="364dp"
      android:layout_gravity="center_horizontal"
      android:hint="@string/password"
      android:textColor="#929498"
      android:padding="16dp"
      android:background="@drawable/rounded_corner_edittext"

      >

  </EditText>
  <Button
      android:layout_width="343dp"
      android:layout_height="45dp"
      android:layout_marginTop="459dp"
      android:layout_gravity="center_horizontal"

       android:background="@drawable/login_background"
       android:text="@string/log_in"
      android:textAllCaps="false"

      >

  </Button>
</FrameLayout>